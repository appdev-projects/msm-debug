<h1>
  Add a new actor
</h1>

<hr>

<form action="/create_actor" >
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob">
      Dob
    </label>

    <input type="text" id="dob" class="form-control" value="<%= @actor.dob %>">
  </div>

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" class="form-control" value="<%= @actor.name %>">
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="bio">
      Bio
    </label>

    <textarea id="bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image url
    </label>

    <input type="text" id="image" class="form-control" value="<%= @actor.image %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create actor
  </button>
</form>

<hr>

<a href="/actors">
  Go back
</a>
